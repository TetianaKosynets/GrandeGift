@model CategoryAddCategoryViewModel

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div>
                @Html.ValidationSummary()
            </div>
            <form asp-controller="Category" asp-action="AddCategory" method="post">
                <div asp-validation-summary="ModelOnly">
                </div>
                <div class="ml-5 mr-5 mt-3">
                    <h2 class="text-center">Add new Category</h2>
                </div>
                <div class="mt-2">
                    <input asp-for="CategoryName" class="form-control" placeholder="Category Name" />
                    <span asp-validation-for="CategoryName" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input class="btn" type="submit" value="Add" />
                    @using (Html.BeginForm("Index", "Home"))
                    {
                        <input class="btn" type="submit" value="Cancel" />
                    }
                </div>
            </form>
        </div>
    </div>
</div>