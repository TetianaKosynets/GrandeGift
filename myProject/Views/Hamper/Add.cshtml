@model HamperAddViewModel

<h2>Add</h2>

<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div>
                @Html.ValidationSummary()
            </div>

            <form asp-controller="Hamper" asp-action="Add" method="post">
                <div asp-validation-summary="ModelOnly">
                </div>

                <div class="mt-2">
                    <input asp-for="HamperName" class="form-control" placeholder="Hamper Name" />
                    <span asp-validation-for="HamperName" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="Details" class="form-control" placeholder="Details" />
                    <span asp-validation-for="Details" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="Price" class="form-control" placeholder="Price" />
                    <span asp-validation-for="Price" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input class="btn" type="submit" value="Register" />
                </div>
            </form>
        </div>
    </div>
</div>
