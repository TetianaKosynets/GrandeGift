@model AccountRegisterViewModel

<h2 class="headings">Register</h2>

<div class="container">
    <div class="row">
        <div class="col-md-3">

        </div>
        <div class="col-md-6">
            <div>
                @Html.ValidationSummary()
            </div>

            <form asp-controller="Account" asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly">
                </div>

                <div class="mt-2">
                    <input asp-for="Username" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Username" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="StreetAddress" class="form-control" placeholder="Street Address" />
                    <span asp-validation-for="StreetAddress" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="City" class="form-control" placeholder="City" />
                    <span asp-validation-for="City" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="State" class="form-control" placeholder="State" />
                    <span asp-validation-for="State" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input asp-for="PostCode" class="form-control" placeholder="Post Code" />
                    <span asp-validation-for="PostCode" class="text-danger" />
                </div>
                <div class="mt-2">
                    <input class="btn" type="submit" value="Register" />
                </div>
            </form>
        </div>
    </div>
</div>
