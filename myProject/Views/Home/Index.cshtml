@model HomeIndexViewModel

<div class="container">
    <div>
        <h2 class="text-center">GRANDE GIFT</h2>
    </div>
    <div id="carouselExampleControls" class="carousel slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="/hamper/id/@Model.Hampers.Last().HamperId">
                    <img class="im d-block mx-auto" src="~/images/@Model.Hampers.Last().FileName" alt="Slide">
                </a>
            </div>
            @foreach (var item in Model.Hampers)
            {
                <div class="carousel-item">
                    <a href="/hamper/id/@item.HamperId">
                        <img class="im d-block mx-auto" role="button" src="/images/@item.FileName" alt="Slide">
                    </a>
                </div>
            }
        </div>

        <a class="carousel-control-prev carous" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next carous" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @foreach (var i in Model.Categories)
    {
        <div class="row mt-4 justify-content-center">
            <h2>@i.CategoryName</h2>
        </div>
        <div class="row">
            @foreach (var item in Model.Hampers)
            {
                if (i.CategoryId == item.CategoryId)
                {
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card">
                            <img class="card-img-top" style="height: 253px" src="/images/@item.FileName" alt="@item.HamperName">
                            <div class="card-body">
                                <h4 class="card-title text-center">@item.HamperName</h4>
                                <textarea class="form-control" id="exampleTextarea" rows="7" card-text">@item.Details</textarea>
                            </div>
                            <div class="card-footer">
                                <a href="/hamper/Id/@item.HamperId" class="btn btn-primary">More Details</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }

    @*<div class="mt-3 justify-content-center">
        <a href="#">Privacy Policy </a>
        <a href="#"> Terms of Use</a>
    </div>*@

</div>